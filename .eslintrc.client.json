{
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": 2,
    "no-undef": 2
  },
  "globals": {
    "DEVELOPMENT_MODE": true,
    "csrfToken": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  }
}

