{
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": 2,
    "no-undef": 2,
    "node/no-unsupported-features": 0,
    "node/no-unpublished-require": 0
  },
  "globals": {
    "DEVELOPMENT_MODE": true,
    "csrfToken": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}

