{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel",
    "jest"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jest/recommended"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": 0,
    "no-undef": 1,
    "node/no-unsupported-features": 0,
    "node/no-unpublished-require": 0,
    "import/no-unresolved": [
      2,
      {
        "commonjs": true,
        "amd": true
      }
    ],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "DEVELOPMENT_MODE": true,
    "describe": true,
    "it": true
  }
}

