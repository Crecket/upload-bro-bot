{
  "plugins": [
    "node",
    "babel"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "env": {
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "asyncAwait": true
    }
  },
  "rules": {
    "strict": 0,
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": 0,
    "node/no-unpublished-require": 0,
    "node/no-unsupported-features": 1,
    "import/no-unresolved": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "globals": {
    "rootRequire": true,
    "__base": true
  }
}