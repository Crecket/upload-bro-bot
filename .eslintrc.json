{
  "plugins": [
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "strict": 0,
    "node/exports-style": [
      "error",
      "module.exports"
    ],
    "no-unused-vars": 0,
    "node/no-unpublished-require": 0
  },
  "globals": {
    "rootRequire": true,
    "__base": true
  }
}